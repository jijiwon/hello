#include <stdio.h>

int main()
{
	int x,y,z;    /*x는 날씨, y는 기온, z는 강수량*/

	printf("날씨를 입력하세요 : \n");
	scanf("%char", x);

	
	
	if(x=c)
	{
		printf("기온을 입력하세요 : \n");
	    scanf("%d",y);

		if(y<=0)
			printf("추워서 외출하지 않습니다.\n");
		else if(y>=30)
			printf("더워서 외출하지 않습니다.\n");
		else
			printf("날씨는 좋지만 이불 밖은 위험하므로 외출하지 않습니다.\n");
	}

	if(x=r)
	{
		printf("시간당 강수량을 입력하세요 : \n");
		scanf("%d",z);

		if(z>=20)
			printf("비가 많이 오니 외출하지 않습니다.\n");
		else 
			printf("집에서 음악을 들으며 비오는 것을 감상합니다.\n");
	}

	if(x=s)
	printf("길이 미끄러우니 외출하지 않습니다.\n");


	if(x=대문자)
		printf("알파벳 대문자로 입력하지 마세요.");

	else
		printf("c,r,s중 하나를 입력하세요.");
	
return 0;
}
